
@{
    ViewBag.Title = "CreateModal";
}

@model Inventory.Models.costumer

<div class="modal fade" id="createCustomerModal" tabindex="-1" role="dialog" aria-labelledby="createCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createCustomerModalLabel">Tambah Data Suplier</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Customer", FormMethod.Post, new { @class = "form-horizontal", id = "createCustomerForm" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div class="form-group">
                            <label>Nama Customer</label>
                            @Html.EditorFor(model => model.namaCustomer, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Nama Customer", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.namaCustomer, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Alamat Customer</label>
                            @Html.EditorFor(model => model.alamatCustomer, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Alamat Customer", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.alamatCustomer, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Contact Customer</label>
                            @Html.EditorFor(model => model.contactCustomer, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Contact Customer", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.contactCustomer, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

