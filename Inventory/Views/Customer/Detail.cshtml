
@{
    ViewBag.Title = "Detail";
}

@model Inventory.Models.costumer

<div class="modal fade" id="detailCustomerModal" tabindex="-1" role="dialog" aria-labelledby="detailCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailCustomerModalLabel">Edit Data Customer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Edit", "Customer", FormMethod.Post, new { @class = "form-horizontal", id = "editCustomer" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.id)
                    <div class="card-body">
                        <div class="form-group">
                            <label>Nama Customer</label>
                            @Html.EditorFor(model => model.namaCustomer, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Nama Barang", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.namaCustomer, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Alamat Customer</label>
                            @Html.EditorFor(model => model.alamatCustomer, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Satuan", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.alamatCustomer, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Contact Customer </label>
                            @Html.EditorFor(model => model.contactCustomer, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Satuan", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.contactCustomer, "", new { @class = "text-danger" })
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
