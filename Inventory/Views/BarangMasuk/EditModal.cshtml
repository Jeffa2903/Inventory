
@{
    ViewBag.Title = "EditModal";
}

@model Inventory.Models.BarangMasukView

<div class="modal fade" id="editBarangMasukModal" tabindex="-1" role="dialog" aria-labelledby="editBarangMasukModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editBarangMasukModalLabel">Edit Data Barang Masuk</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Edit", "BarangMasuk", FormMethod.Post, new { @class = "form-horizontal", id = "editBarangMasukForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                <div class="card-body">
                    <div class="form-group">
                        <label>Nama Barang</label>
                        @Html.EditorFor(model => model.NamaBarang, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Nama Barang", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.NamaBarang, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Tanggal Masuk</label>
                        @Html.TextBoxFor(model => model.TanggalMasuk, new { @class = "form-control", @placeholder = "Input Tanggal Masuk", @required = "required", type = "date" })
                    </div>
                    <div class="form-group">
                        <label>Jumlah Barang</label>
                        @Html.EditorFor(model => model.JumlahBarang, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Jumlah Barang", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.JumlahBarang, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Supllier</label>
                        <select class="form-control" aria-label="Default select example" id="idSupllierBarang" name="idSupllierBarang">
                            <option value="@Model.idSuplier" selected>@Model.Suplier</option>
                            @foreach (var item in ViewBag.supplier)
                            {
                                <option value="@item.id">@item.namaSupplier</option>
                            }

                        </select>
                    </div>
                </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>