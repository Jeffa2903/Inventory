
@{
    ViewBag.Title = "EditModal";
}

@model Inventory.Models.barang

<div class="modal fade" id="editBarangModal" tabindex="-1" role="dialog" aria-labelledby="editBarangModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createBarangModalLabel">Edit Data Barang</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Edit", "Barang", FormMethod.Post, new { @class = "form-horizontal", id = "createBarangForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.id)
                <div class="card-body">
                    <div class="form-group">
                        <label>Nama Barang</label>
                        @Html.EditorFor(model => model.namaBarang, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Nama Barang", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.namaBarang, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Satuan Barang</label>
                        @Html.EditorFor(model => model.satuan, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Satuan", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.satuan, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Harga Barang</label>
                        @Html.EditorFor(model => model.hargaBarang, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Harga Barang", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.hargaBarang, "", new { @class = "text-danger" })
                    </div>
                </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

