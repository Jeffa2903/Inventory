
@{
    ViewBag.Title = "CreateModal";
}

@model Inventory.Models.barang

<div class="modal fade" id="createBarangModal" tabindex="-1" role="dialog" aria-labelledby="createBarangModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createBarangModalLabel">Tambah Data Barang</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Barang", FormMethod.Post, new { @class = "form-horizontal", id = "createBarangForm" }))
                {
                    @Html.AntiForgeryToken()
                <div class="card-body">
                    <div class="form-group">
                        <label>Nama Barang</label>
                        @Html.EditorFor(model => model.namaBarang, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Nama Barang", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.namaBarang, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Satuan Barang</label>
                        @Html.EditorFor(model => model.satuan, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Satuan", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.satuan, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Harga Barang</label>
                        @Html.EditorFor(model => model.hargaBarang, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Harga Barang", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.hargaBarang, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Jenis</label>
                        <input type="radio" id="jenis" name="jenis" value="Fragile" />
                        <label>Fragile</label>
                        <input type="radio" id="nonfragile" name="jenis" value="Non-Fragile" />
                        <label>Non-Fragile</label>
                    </div>

                </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


