
@{
    ViewBag.Title = "Detail";
}

@model Inventory.Models.supplier

<div class="modal fade" id="detailupplierModal" tabindex="-1" role="dialog" aria-labelledby="detailupplierModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailupplierModalLabel">Edit Data Supplier</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Edit", "Supplier", FormMethod.Post, new { @class = "form-horizontal", id = "editSupplier" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.id)
                    <div class="card-body">
                        <div class="form-group">
                            <label>Nama Supplier</label>
                            @Html.EditorFor(model => model.namaSupplier, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Nama Barang", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.namaSupplier, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Alamat Supplier</label>
                            @Html.EditorFor(model => model.alamatSupplier, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Satuan", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.alamatSupplier, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Contact Supplier </label>
                            @Html.EditorFor(model => model.contactSuplier, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input Satuan", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.contactSuplier, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                }
            </div>
        </div>
    </div>
</div>
